# Config stuff
CC = @CC@
AR = ar
RANLIB = @RANLIB@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RTFLAGS = @RTFLAGS@
HAVE_X = @HAVE_X@
XYPRIMS = @XYPRIMS@
TCLSH = @TCLSH@
srcdir = @srcdir@
top_srcdir = @top_srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@/obc
subdir = thunder
SHELL = /bin/sh
DEBUG = @DEBUG@
VPATH = @srcdir@:../lib
ENABLE_DEBUGGER = @ENABLE_DEBUGGER@
ENABLE_JIT = @ENABLE_JIT@
PAGESIZE = @PAGESIZE@
VM = @VM@
AUTOCONF = @AUTOCONF@
AUTOHEADER = @AUTOHEADER@
# End

all: libthunder.a

ALL_CFLAGS = $(RTFLAGS) -Wall -I . -I $(srcdir)

libthunder.a: $(VM) labels.o vmdebug.o codebuf.o
	$(AR) cr $@ $^; $(RANLIB) $@

%.o : %.c
	$(CC) $(ALL_CFLAGS) -c $< -o $@

fact: fact.o libthunder.a
	$(CC) $^ -o $@

mgrep: mgrep.o libthunder.a
	$(CC) $^ -o $@

## Cleanup

# clean: remove all object files
clean:
	rm -f *.[ao]

quiteclean: clean

# distclean: also remove all non-distributed files
distclean: quiteclean
	rm -f Makefile config.h stamp-h

realclean: distclean
	rm -f config.h.in stamp-h.in configure

.DELETE_ON_ERROR:

## Configuration and dependencies

# Automatic reconfiguration

$(srcdir)/configure: configure.in aclocal.m4
	cd $(srcdir) && $(AUTOCONF)

config.status: configure
	./config.status --recheck

$(srcdir)/config.h.in: stamp-h.in
$(srcdir)/stamp-h.in: configure.in aclocal.m4
	cd $(srcdir) && $(AUTOHEADER)
	echo timestamp >$(srcdir)/stamp-h.in

config.h: stamp-h
stamp-h: config.h.in config.status
	CONFIG_FILES= CONFIG_HEADERS=config.h ./config.status
	echo timestamp >stamp-h

Makefile: $(srcdir)/Makefile.in config.status
	./config.status $@

###

$(VM) codebuf.o labels.o vmdebug.o fact.o: vm.h config.h vminternal.h
